<?xml version="1.0" encoding="UTF-8"?>
<interface>
  <requires lib="gtk" version="4.0"/>
  <requires lib="adw" version="1.0"/>
  <template class="H2mmOobeWindow" parent="AdwWindow">
    <property name="modal">true</property>
    <property name="title">Welcome to h2mm-gui</property>
    <property name="default-width">600</property>
    <property name="default-height">400</property>
    <property name="hide-on-close">false</property>
    <child>
      <object class="AdwToolbarView">
        <child type="top">
          <object class="AdwHeaderBar">
            <property name="title-widget">
              <object class="AdwWindowTitle">
                <property name="title" translatable="yes">Welcome to h2mm-gui</property>
              </object>
            </property>
          </object>
        </child>
        <property name="content">
          <object class="AdwStatusPage">
            <property name="icon-name">applications-system-symbolic</property>
            <property name="title" translatable="yes">Initial Setup</property>
            <property name="description" translatable="yes">Please configure how to find the h2mm-cli tool.</property>
            <child>
              <object class="GtkListBox">
                <style>
                  <class name="boxed-list"/>
                </style>
                <child>
                  <object class="AdwActionRow">
                    <property name="title" translatable="yes">CLI Source</property>
                    <child>
                      <object class="GtkBox">
                        <child>
                          <object class="GtkCheckButton" id="bundled_check">
                            <property name="label" translatable="yes">Use Bundled (Recommended)</property>
                            <property name="active">true</property>
                            <property name="group">custom_check</property>
                          </object>
                        </child>
                        <child>
                          <object class="GtkCheckButton" id="custom_check">
                            <property name="label" translatable="yes">Use Custom Path</property>
                          </object>
                        </child>
                      </object>
                    </child>
                  </object>
                </child>
                <child>
                  <object class="AdwActionRow" id="custom_cli_path_row">
                    <property name="title" translatable="yes">Custom CLI Path</property>
                    <property name="subtitle" translatable="yes">No file selected</property>
                    <property name="activatable">true</property>
                    <property name="sensitive">false</property>
                  </object>
                </child>
              </object>
            </child>
            <child>
                <object class="GtkButton" id="finish_button">
                    <property name="label" translatable="yes">Finish Setup</property>
                    <property name="halign">center</property>
                    <property name="margin-top">24</property>
                    <style>
                        <class name="pill"/>
                        <class name="suggested-action"/>
                    </style>
                </object>
            </child>
          </object>
        </property>
      </object>
    </child>
  </template>
</interface>
